@using PNACCompetitionsDbFirst.Entities;

@{
  Layout = null;
}

@model List<HeaviestFish>

@if (Model.Count() > 0)
{
  <div class="table-responsive">
    <table class="table table-striped tablesorter">
      <thead>
        <tr>
          <th>
            <span class="hidden-sm hidden-xs hidden-md ">Fish</span>
            <span class="hidden-sm hidden-xs hidden-md tablesorter-image"></span>
            <span class="hidden-lg">F</span>
          </th>
          <th>
            <span class="hidden-sm hidden-xs hidden-md ">Name</span>
            <span class="hidden-sm hidden-xs hidden-md tablesorter-image"></span>
            <span class="hidden-lg">N</span>
          </th>

          <th>
            <span class="hidden-sm hidden-xs hidden-md">Length (cm)</span>
            <span class="hidden-sm hidden-xs hidden-md tablesorter-image"></span>
            <span class="hidden-lg">L</span>
          </th>

          <th>
            <span class="hidden-sm hidden-xs hidden-md">Value (@Model.First().Units)</span>
            <span class="hidden-sm hidden-xs hidden-md tablesorter-image"></span>
            <span class="hidden-lg">W</span>
          </th>

        </tr>
      </thead>

      <tbody>

        @foreach (HeaviestFish point in Model.OrderBy(m => m.Fish.Name))
        {
          <tr>
            <td>@point.Fish.Name</td>
            <td>@point.Competitor.ShortName()</td>
            <td>@point.Length</td>
            <td>@Math.Round(point.Value, 2)</td>
          </tr>
        }

      </tbody>
    </table>
  </div>
}
