@using PNACCompetitionsDbFirst.Models.ViewModels
@using PNACCompetitionsDbFirst.Models.ViewModels.Results;

@model List<LengthResult>

<div id="length-tab">


  <div class="row">
    <div class="col-md-7">

      @if (Model.Count() > 0)
      {
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>

                <th>
                  <span class="hidden-sm hidden-xs hidden-md">Rank</span>
                  <span class="hidden-lg">R</span>
                </th>

                <th>
                  <span class="hidden-sm hidden-xs hidden-md">Name</span>
                  <span class="hidden-lg">N</span>
                </th>

                <th>
                  <span class="hidden-sm hidden-xs hidden-md">Length Points</span>
                  <span class="hidden-lg">P</span>
                </th>

                <th>
                  <span class="hidden-sm hidden-xs hidden-md">Competition Points</span>
                  <span class="hidden-lg">P</span>
                </th>

              </tr>
            </thead>

            <tbody id="results-body">

              @foreach (LengthResult result in Model)
              {
                <tr>
                  <td>@result.Rank</td>
                  <td>@result.CompetitorName</td>
                  <td>@result.LengthPoints</td>
                  <td>@result.CompetitionPoints</td>
                </tr>
              }

            </tbody>

          </table>
        </div>
      }
      else
      {
        @:There are no length results yet
      }

    </div>
  </div>
</div>

