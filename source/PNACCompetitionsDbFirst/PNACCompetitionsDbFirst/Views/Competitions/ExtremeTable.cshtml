@using PNACCompetitionsDbFirst.Entities;

@{
  Layout = null;
}

@model List<ExtremeFish>

@if (Model.Count() > 0)
{
  <div class="table-responsive">
    <table class="table table-striped tablesorter">
      <thead>
        <tr>
          <th>
            <span class="hidden-sm hidden-xs hidden-md ">Fish</span>
            <span class="hidden-lg">F</span>
          </th>
          <th>
            <span class="hidden-sm hidden-xs hidden-md ">Name</span>
            <span class="hidden-lg">N</span>
          </th>

          <th>
            <span class="hidden-sm hidden-xs hidden-md">Value (@Model.First().Units)</span>
            <span class="hidden-lg">LP</span>
          </th>
        </tr>
      </thead>

      <tbody>

        @foreach (ExtremeFish point in Model.OrderBy(m => m.Fish.Name))
        {
          <tr>
            <td>@point.Fish.Name</td>
            <td>@point.Competitor.ShortName()</td>
            <td>@point.Value</td>
          </tr>
        }

      </tbody>
    </table>
  </div>
}
