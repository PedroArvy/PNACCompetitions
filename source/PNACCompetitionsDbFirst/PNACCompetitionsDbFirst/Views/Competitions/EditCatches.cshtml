@using PNACCompetitionsDbFirst.Models.ViewModels
@using PNACCompetitionsDbFirst.Models.ViewModels.Results;

@model CompetitionResults



<script>

  function DeleteCatch(id) {

    if (confirm('Are you sure you want to delete this catch?')) {

      $.ajax("/Catches/Delete?id=" + id)

        .done(function (msg) {

          if (msg.success == 'true') {
            $('#row-' + id).hide('slow');
          }

        })
        .fail(function () {
          alert("DeleteCatch error");
        })

    }

    return false;
  }

</script>


<div id="catches-tab">

  <div class="row">

    <div class="col-md-7">
      <a href="/Catches/New?id=@Model.CompetitonId" class="btn btn-default save-button" style="color:#ffffff;margin-bottom:20px">New</a>
    </div>
  </div>


  <div class="row">
    <div class="col-md-7">


      @if (Model.Catches.Count() > 0)
      {
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>
                  <span class="hidden-sm hidden-xs hidden-md">Action</span>
                  <span class="hidden-lg">A</span>
                </th>
                @if (Model.ShowDay)
                {
                  <th>
                    <span class="hidden-sm hidden-xs hidden-md">Day</span>
                    <span class="hidden-lg">D</span>
                  </th>
                }
                <th>Member</th>
                <th>
                  <span class="hidden-sm hidden-xs hidden-md">Fish</span>
                  <span class="hidden-lg">F</span>
                </th>
                <th>
                  <span class="hidden-sm hidden-xs hidden-md">kg</span>
                  <span class="hidden-lg">W</span>
                </th>
                <th>
                  <span class="hidden-sm hidden-xs hidden-md">cm</span>
                  <span class="hidden-lg">L</span>
                </th>
              </tr>
            </thead>

            <tbody id="competitors-body">

              @foreach (CompetitorResult result in Model.Catches.OrderByDescending(c => c.Date).ThenByDescending(c => c.CatchId))
              {
                <tr id="row-@result.CatchId">

                  <td>
                    @Html.ActionLink("Edit", "Edit", "Catches", new { id = result.CatchId }, new { @class = "btn btn-primary btn-sm white-button" })
                    <a href="#" class="btn btn-primary btn-sm white-button" onclick="return DeleteCatch(@result.CatchId)">Delete</a>
                  </td>

                  @if (Model.ShowDay)
                  {
                    <td>@result.Date.ToString("ddd")</td>
                  }

                  <td>@result.CompetitorName</td>
                  <td>@result.FishName</td>

                  @if (result.CatchAndRelease)
                  {
                    <td>NA</td>
                  }
                  else
                  {
                    <td>@result.Weight</td>
                  }

                  @if (result.Length > 0)
                  {
                    <td>@result.Length</td>
                  }
                  else
                  {
                    <td>NA</td>
                  }

                </tr>
              }

            </tbody>
          </table>
        </div>
      }
      else
      {
        @:There are no catches yet
      }

    </div>
  </div>


</div>


