@using PNACCompetitionsDbFirst.Models.ViewModels;
@model LeaderBoard

@{
  ViewBag.Title = "Leader Board";
}

<div class="row">
  <div class="col-md-4">
    <h2 class="section-title">Leader Board</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">

      <div style="float:left">
        <h3>Length</h3>
        @Html.Partial("/Views/Home/LeaderBoard.cshtml", Model.Length)
      </div>

      <div class="leader-board">
        <h3>Weight Fresh</h3>
        @Html.Partial("/Views/Home/LeaderBoard.cshtml", Model.WeightFresh)
      </div>

      <div class="leader-board">
        <h3>Weight Estuary</h3>
        @Html.Partial("/Views/Home/LeaderBoard.cshtml", Model.WeightEstuary)
      </div>

      <div class="leader-board">
        <h3>Weight Saltwater</h3>
        @Html.Partial("/Views/Home/LeaderBoard.cshtml", Model.WeightSaltwater)
      </div>

    </div>
  </div>
</div>


