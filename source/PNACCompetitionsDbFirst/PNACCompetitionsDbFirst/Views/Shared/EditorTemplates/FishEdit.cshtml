@using PNACCompetitionsDbFirst.Models.ViewModels
@model FishEdit


@Html.AntiForgeryToken()

<div class="form-group">
  <div class="col-md-10">
    @Html.LabelFor(m => m.Name, new { @class = "pnac-label" })
  </div>
  <div class="col-md-10">
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Name)
  </div>
</div>

<div class="form-group">
  <div class="col-md-10">
    @Html.LabelFor(m => m.Minimum, new { @class = "pnac-label" })
  </div>
  <div class="col-md-10">
    @Html.TextBoxFor(m => m.Minimum, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Minimum)
  </div>
</div>

