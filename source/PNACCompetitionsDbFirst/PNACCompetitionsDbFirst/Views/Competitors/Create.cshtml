@using PNACCompetitionsDbFirst.Models.ViewModels
@model CompetitorCreate

@{
  ViewBag.Title = "Assign a password for " + @Model.Name;
}

<div class="row">
  <div class="col-md-8">
    <h2 class="section-title">Assign a password for @Model.Name</h2class="section-title">
  </div>
</div>


<div class="row">
  <div class="col-md-10">

    @using (Html.BeginForm("Create", "Competitors", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
      @Html.AntiForgeryToken()

      @Html.ValidationSummary()

        <div class="form-group">
          <div class="col-md-10">
            @Html.LabelFor(m => m.Email, new { @class = "pnac-label" })
          </div>
          <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
          </div>
        </div>

@*
      if (Model.HasMobile)
      {
        <div class="form-group">
          <div class="col-md-10">
            <label class="pnac-label">@Model.MobileConfirmLabel()</label>
          </div>
          <div class="col-md-10">
            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Mobile)
          </div>
        </div>
      }

      @Html.HiddenFor(c => c.HasMobile)
*@

      <div class="form-group">
        <div class="col-md-10">
          @Html.LabelFor(m => m.Password, new { @class = "pnac-label" })
        </div>
        <div class="col-md-10">
          @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
          @Html.ValidationMessageFor(m => m.Password)
        </div>
      </div>


      <div class="form-group">
        <div class="col-md-10">
          @Html.LabelFor(m => m.ConfirmPassword, new { @class = "pnac-label" })
        </div>
        <div class="col-md-10">
          @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
          @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
      </div>

      @Html.HiddenFor(c => c.CompetitorId)


      <div class="form-group">
        <div class="col-md-10">
          <input type="submit" class="btn btn-default save-button" value="Save" />
          <a href="/competitors/index" class="btn btn-default save-button not-first-button">Back to all competitors</a>
        </div>
      </div>
    }

  </div>
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}