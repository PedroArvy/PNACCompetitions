@model List<Catch>
@using Microsoft.Data.Entity;

<br>
<div class="row">
  <div class="medium-4 large-4 columns">
    <h1>Leader Board</h1>
  </div>

  <div>
    <table>
      <thead>
        <tr>
          <td>Rank</td>
          <td>Competitor</td>
          <td>Trial Points</td>
          <td>Formula</td>
        </tr>
      </thead>

      @foreach (Catch catch_ in Model.OrderByDescending(m => m.TrialPoints()))
      {
        int count = 1;
        <tr>
          <td>@count</td>
          <td>@catch_.Competitor.PrintName()</td>
          <td>@catch_.TrialPoints()</td>
          <td>@catch_.PointsByFormula()</td>
        </tr>

        {
          count++;
        }
      }

    </table>
  </div>
</div>
